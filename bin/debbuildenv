#!/bin/bash

usage(){
      printf "***************************\n"
      printf "* Error: Invalid argument.*\n"
      printf "***************************\n"
      exit 1
}

[ $# -eq 0 ] && usage

while [ $# -gt 0 ]; do
  case "$1" in
    --mirror=*)
      LOCAL_DEB_MIRROR="${1#*=}"
      ;;
    --target=*)
      BUILD_TARGET="${1#*=}"
      ;;
    --entry-exit-command=*)
      ENTRY_EXIT_COMMAND="${1#*=}"
      ;;
    --apt-cache-host=*)
      CACHE_HOST="${1#*=}"
      ;;
    *)
      usage
  esac
  shift
done

LOCAL_DEB_MIRROR="${LOCAL_DEB_MIRROR:-http://deb.debian.org}"
BUILD_TARGET="${BUILD_TARGET:-unstable}"
ENTRY_EXIT_COMMAND="${ENTRY_EXIT_COMMAND:-bash}"

SCRIPT_NAME="$(basename ${0})"
BUILD_DIR="/srv/${SCRIPT_NAME}/${BUILD_TARGET}/build"
LOCAL_DIR="/srv/${SCRIPT_NAME}/${BUILD_TARGET}/local/bin"
USER_HOME_DIR="/root"

[[ ( ! ( -d ${LOCAL_DIR} ) || ! ( -L ${LOCAL_DIR} ) ) ]] && mkdir -p /srv/${SCRIPT_NAME}/${BUILD_TARGET}/local && ln -s /srv/${SCRIPT_NAME}/generic/local/bin ${LOCAL_DIR}
[ -f ${BUILD_DIR} ] || mkdir -p ${BUILD_DIR}

docker container attach ${BUILD_TARGET} || \
 ( docker start ${BUILD_TARGET} && docker container attach ${BUILD_TARGET} ) || \
 docker run -h ${BUILD_TARGET} --name ${BUILD_TARGET} \
 -v "${BUILD_DIR}":"${USER_HOME_DIR}" \
 -v "${LOCAL_DIR}":"/usr/local/bin" \
 -e "BUILD_TARGET=${BUILD_TARGET}" \
 -e "LOCAL_DEB_MIRROR=${LOCAL_DEB_MIRROR}" \
 -e "ENTRY_EXIT_COMMAND=${ENTRY_EXIT_COMMAND}" \
 -e "CACHE_HOST=${CACHE_HOST}" \
 -it debian:${BUILD_TARGET} \
 "entrypoint.sh"
